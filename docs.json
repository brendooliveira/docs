{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "almond",
  "name": "Cpay Pagamentos",
  "colors": {
    "primary": "#08d6b4",
    "light": "#08d6b4",
    "dark": "#08d6b4"
  },
  "seo": {
    "indexing": "all",
    "metatags": {
      "og:type": "website",
      "og:site_name": "Cpay Pagamentos Documentação"
    }
  },
  "favicon": "/favicon.png",
  "api": {
    "mdx": {
      "server": "https://api.aobapay.com/v1",
      "auth": {
        "method": "bearer"
      }
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentação",
        "groups": [
          {
            "group": "Introdução",
            "pages": [
              "pages/intro",
              "pages/authentication",
              "pages/webhooks"
            ]
          },
          {
            "group": "Pix QRCode",
            "pages": [
              "pages/pix/reference",
              "pages/pix/create",
              "pages/pix/get"
            ]
          },
          {
            "group": "Conta",
            "pages": [
              "pages/account/reference",
              "pages/account/get"
            ]
          }
        ]
      },
      {
        "tab": "Referência da API",
        "openapi": "openapi.yaml"
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Comunidade",
          "href": "https://discord.gg/BxC2W3bB",
          "icon": "discord"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Suporte",
        "href": "mailto:contato@aobapay.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://app.aobapay.com"
    }
  },
  "footer": {
    "socials": {
      "instagram": "https://www.instagram.com/aobapay",
      "github": "https://github.com/AobaPay",
      "linkedin": "https://linkedin.com/company/mintlify"
    }
  }
}