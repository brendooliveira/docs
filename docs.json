{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "AobaPay Pagamentos",
  "colors": {
    "primary": "#002ec9",
    "light": "#fff",
    "dark": "#002ec9"
  },
  "appearance": {
    "default": "system"
  },
  "icons": {
    "library": "fontawesome"
  },
  "fonts":{
    "family": "Bricolage Grotesque"
  },
  "seo": {
    "indexing": "all",
    "metatags": {
      "og:type": "website",
      "og:site_name": "AobaPay Pagamentos Documentação"
    }
  },
  "favicon": "favicon.png",
  "api": {
    "mdx": {
      "server": "https://api.aobapay.com/v1",
      "auth": {
        "method": "bearer"
      }
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentação",
        "groups": [
          {
            "group": "Introdução",
            "pages": [
              "pages/intro",
              "pages/authentication",
              "pages/webhooks"
            ]
          },
          {
            "group": "Pix QRCode",
            "pages": [
              "pages/pix/reference",
              "pages/pix/create",
              "pages/pix/get"
            ]
          },
          {
            "group": "Saque",
            "pages": [
              "pages/withdraw/reference",
              "pages/withdraw/create",
              "pages/withdraw/get"
            ]
          },
          {
            "group": "Conta",
            "pages": [
              "pages/account/reference",
              "pages/account/get"
            ]
          },
          {
            "group": "Integrações",
            "pages": [
              "pages/integrations/woocommerce"
            ]
          }
        ]
      },
      {
        "tab": "Referência da API",
        "openapi": "openapi.yaml"
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Comunidade",
          "href": "https://discord.gg/BxC2W3bB",
          "icon": "discord"
        },
        {
          "anchor": "Status",
          "href": "https://stats.uptimerobot.com/kEJMF69S5x",
          "icon": "heart-pulse"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/logo-aoba_4.svg",
    "dark": "/logo/logo-aoba_5.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Suporte",
        "href": "mailto:contato@aobapay.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://app.aobapay.com"
    }
  },
  "footer": {
    "socials": {
      "instagram": "https://www.instagram.com/aobapay",
      "github": "https://github.com/AobaPay",
      "linkedin": "https://linkedin.com/company/mintlify"
    }
  }
}